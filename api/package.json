{
    "name": "tangle-utils-api",
    "description": "API for Tangle Utilities",
    "version": "1.4.5",
    "author": "Martyn Janes <martyn.janes@iota.org>",
    "repository": {
        "type": "git",
        "url": "https://github.com/iotaledger/tangle-utils.git/tree/master/api"
    },
    "license": "MIT",
    "private": true,
    "scripts": {
        "build-clean": "rimraf ./dist/*",
        "build-compile": "tsc",
        "build-watch": "tsc --watch",
        "build-lint": "tslint -p ./tsconfig.json -c ./tslint.json -t verbose",
        "build-config": "copyfiles -u 2 ./src/data/config*.json ./dist/data/",
        "build": "npm-run-all build-clean build-compile build-lint build-config",
        "serve-mon": "nodemon ./dist/index",
        "start-dev": "run-p serve-mon build-watch",
        "start": "node ./dist/index"
    },
    "engines": {
        "node": "10.x.x"
    },
    "dependencies": {
        "@iota/core": "^1.0.0-beta.29",
        "@iota/transaction-converter": "^1.0.0-beta.23",
        "@types/node-schedule": "^1.3.0",
        "aws-sdk": "^2.656.0",
        "axios": "^0.19.2",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "node-schedule": "^1.3.2",
        "socket.io": "^2.3.0",
        "zeromq": "^6.0.0-beta.6"
    },
    "devDependencies": {
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.6",
        "@types/node": "^13.11.1",
        "@types/socket.io": "^2.1.4",
        "copyfiles": "^2.2.0",
        "husky": "^4.2.5",
        "nodemon": "^2.0.3",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "tslint": "^6.1.1",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-microsoft-contrib": "^6.2.0",
        "typescript": "^3.8.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run build-lint"
        }
    }
}
